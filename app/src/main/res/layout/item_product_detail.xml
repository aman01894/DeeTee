<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_productNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_regular"
            android:textColor="@color/hint_color"
            android:textSize="12dp"
            android:text="So No."/>


        <TextView
            android:id="@+id/tv_productName"
            android:layout_below="@+id/tv_productNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_bold"
            android:textColor="@color/black"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:text="SE-I-N-740237-A"/>

    </LinearLayout>


    <View
        android:id="@+id/vewOne"
        android:layout_toEndOf="@+id/tv_productName"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="1dp"
         android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:background="@color/white_border"/>
</LinearLayout>