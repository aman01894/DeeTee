<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rrMain"
        android:background="@drawable/bg_with_left_border"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_OrderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/dm_bold"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/txt_orderQty"
            android:layout_below="@+id/txt_OrderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@color/hint_color"
            android:fontFamily="@font/dm_regular"
            android:layout_marginBottom="@dimen/_6sdp"
            android:textSize="14dp"
            android:text="Order Qty- "/>

        <TextView
            android:id="@+id/txt_orderQtyView"
            android:layout_below="@+id/txt_OrderName"
            android:layout_toRightOf="@+id/txt_orderQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_6sdp"
            android:fontFamily="@font/dm_regular"
            android:textSize="14dp"
            android:text="12"/>

    </RelativeLayout>

</RelativeLayout>