<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rr_producDetailsView"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rr_productDetailHeader"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_light_blue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_medium"
                android:text="Product Details"
                android:layout_marginStart="10dp"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white_border"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_below="@+id/rr_productDetailHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_machine_ProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_medium"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:text="Tube Forming Rolls"/>

            <LinearLayout
                android:layout_below="@+id/tv_machine_ProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:fillViewport="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:id="@+id/tv_OrderQT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_regular"
                                    android:textColor="@color/hint_color"
                                    android:textSize="12dp"
                                    android:maxLines="1"
                                    android:text="Order Qty."/>


                                <TextView
                                    android:id="@+id/tv_QT_Order"
                                    android:layout_below="@+id/tv_productNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_bold"
                                    android:textColor="@color/black"
                                    android:singleLine="true"
                                    android:maxLines="1"
                                    android:layout_marginTop="5dp"
                                    android:textSize="14dp"/>

                            </LinearLayout>


                            <View
                                android:id="@+id/vewOne"
                                android:layout_toEndOf="@+id/tv_productName"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:background="@color/white_border"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:id="@+id/tv_jcQty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_regular"
                                    android:textColor="@color/hint_color"
                                    android:textSize="12dp"
                                    android:maxLines="1"
                                    android:text="Jc Qty"/>


                                <TextView
                                    android:id="@+id/tv_JcQuantity"
                                    android:layout_below="@+id/tv_productNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_bold"
                                    android:textColor="@color/black"
                                    android:singleLine="true"
                                    android:maxLines="1"
                                    android:text="5"
                                    android:layout_marginTop="5dp"
                                    android:textSize="14dp"/>

                            </LinearLayout>


                            <View
                                android:id="@+id/vewOne2"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:background="@color/white_border"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:id="@+id/tv_rollPunch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_regular"
                                    android:textColor="@color/hint_color"
                                    android:textSize="12dp"
                                    android:maxLines="1"
                                    android:text="Roll Punch No"/>


                                <TextView
                                    android:id="@+id/tv_rollPunchNumber"
                                    android:layout_below="@+id/tv_productNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_bold"
                                    android:textColor="@color/black"
                                    android:singleLine="true"
                                    android:maxLines="1"
                                    android:text="-"
                                    android:layout_marginTop="5dp"
                                    android:textSize="14dp"/>

                            </LinearLayout>


                            <View
                                android:id="@+id/vewOne3"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:background="@color/white_border"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:id="@+id/tv_specialOperation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_regular"
                                    android:textColor="@color/hint_color"
                                    android:textSize="12dp"
                                    android:maxLines="1"
                                    android:text="Special Operation"/>


                                <TextView
                                    android:id="@+id/tv_operationValue"
                                    android:layout_below="@+id/tv_productNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_bold"
                                    android:textColor="@color/black"
                                    android:singleLine="true"
                                    android:maxLines="1"
                                    android:text="-"
                                    android:layout_marginTop="5dp"
                                    android:textSize="14dp"/>

                            </LinearLayout>


                            <View
                                android:id="@+id/vewOne4"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:background="@color/white_border"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_productDetailsRecycler"
                android:layout_below="@+id/tv_machine_ProductName"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>