<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_65sdp"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/tv_productNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_regular"
        android:textColor="@color/hint_color"
        android:textSize="12dp"
        android:text="So No."/>


    <TextView
        android:id="@+id/tv_productName"
        android:layout_below="@+id/tv_productNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_bold"
        android:textColor="@color/black"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_marginTop="7dp"
        android:textSize="14dp"
        android:text="SE-I-N-740237-A"/>

    <TextView
        android:id="@+id/tv_productDegree"
        android:layout_toRightOf="@+id/tv_productName"
        android:layout_below="@+id/tv_productNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_bold"
        android:textColor="@color/black"
        android:singleLine="true"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:textSize="8dp"
        android:text="15"/>

    <TextView
        android:id="@+id/tv_productDegreePluss"
        android:layout_toRightOf="@+id/tv_productName"
        android:layout_below="@+id/tv_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_bold"
        android:textColor="@color/black"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_marginTop="-8dp"
        android:textSize="8dp"
        android:text="+0.415"/>


    <View
        android:id="@+id/vewOne"
        android:layout_marginStart="10dp"
        android:layout_width="1dp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent"
         android:background="@color/white_border"/>
</RelativeLayout>